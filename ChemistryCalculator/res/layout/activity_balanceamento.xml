<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BalanceamentoActivity" >

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btBalancear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:hint="Equação Balanceada"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtReagente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputReagentes"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Reagente" />

    <EditText
        android:id="@+id/inputReagentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btBalancear"
        android:layout_below="@+id/txtReagente"
        android:ems="10" />

    <Button
        android:id="@+id/btBalancear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onClickBtBalancear"
        android:text="Balancear" />

    <Button
        android:id="@+id/btAddProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btAddReagente"
        android:layout_alignTop="@+id/inputProdutos"
        android:onClick="onClickAddProduto"
        android:text="Adiciona Solução" />

    <Button
        android:id="@+id/btAddReagente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/inputReagentes"
        android:layout_toRightOf="@+id/inputReagentes"
        android:onClick="onClickAddReagente"
        android:text="Adiciona Solução" />

    <TextView
        android:id="@+id/txtProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputProdutos"
        android:layout_below="@+id/btAddReagente"
        android:layout_marginTop="26dp"
        android:text="Produto" />

    <EditText
        android:id="@+id/inputProdutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtProduto"
        android:layout_toLeftOf="@+id/btAddProduto"
        android:ems="10" >

        <requestFocus />
    </EditText>

</RelativeLayout>