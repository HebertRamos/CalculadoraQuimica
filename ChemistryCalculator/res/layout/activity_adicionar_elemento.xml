<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdicionarElementoActivity" >

    <EditText
        android:id="@+id/editTextIndiceElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextElemento"
        android:layout_alignBottom="@+id/editTextElemento"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="38dp"
        android:ems="10"
        android:inputType="number"
        android:width="@dimen/tamanho_campo_indice_coeficiente" />

    <EditText
        android:id="@+id/editTextElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonOkElemento"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/editTextIndiceElemento"
        android:ems="10"
        android:maxWidth="@dimen/activity_horizontal_margin" />

    <ImageButton
        android:id="@+id/imageButtonOkElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/botao_ok" />

    <TextView
        android:id="@+id/textViewCoeficiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextElemento"
        android:layout_alignLeft="@+id/editTextElemento"
        android:layout_marginLeft="24dp"
        android:text="Elemento" />

    <TextView
        android:id="@+id/textViewIndiceSolucao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewCoeficiente"
        android:layout_alignBottom="@+id/textViewCoeficiente"
        android:layout_alignLeft="@+id/editTextIndiceElemento"
        android:text="Índice" />

    <EditText
        android:id="@+id/EditTextCoeficienteElemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/imageButtonOkElemento"
        android:ems="10"
        android:inputType="number"
        android:width="@dimen/tamanho_campo_indice_coeficiente" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCoeficiente"
        android:layout_toLeftOf="@+id/imageButtonOkElemento"
        android:text="Coeficiente" />

</RelativeLayout>
