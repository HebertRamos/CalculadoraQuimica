<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdicionarSolucaoActicity" >

    <EditText
        android:id="@+id/CoeficienteSolucao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btOk"
        android:layout_alignParentTop="true"
        android:ems="10" />

    <EditText
        android:id="@+id/IndiceSolucao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CoeficienteSolucao"
        android:layout_below="@+id/CoeficienteSolucao"
        android:duplicateParentState="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/IndiceSolucao1"
        android:layout_marginTop="24dp"
        android:text="Solução" />

    <EditText
        android:id="@+id/inputSolucao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewUp"
        android:layout_alignBottom="@+id/textViewUp"
        android:layout_alignLeft="@+id/IndiceSolucao1"
        android:ems="10"
        android:enabled="false"
        android:hint="ex: H" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CoeficienteSolucao"
        android:layout_alignBottom="@+id/CoeficienteSolucao"
        android:layout_toLeftOf="@+id/btOk"
        android:text="Coeficiente" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/IndiceSolucao1"
        android:layout_alignBottom="@+id/IndiceSolucao1"
        android:layout_alignRight="@+id/textView1"
        android:text="Índice" />

    <Button
        android:id="@+id/elementoFe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="adicionarElemento"
        android:text="Adicionar Elemento na Solução" />

    <Button
        android:id="@+id/btOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elementoFe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:onClick="onClick"
        android:text="Finalizar Solução" />

</RelativeLayout>